
@model IEnumerable<ConsultorioMedicoMvc.ViewModels.Medicos.ListarMedicoViewModel> 
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Médicos</h1>
            </div>
        </div>
    </div>
</section>

<div class="content">
    <div class="row">
         <div class="col-12">
             <div class="card">
                 <div class="card-header">
                    <div class="d-flex justify-content-between">
                        <form asp-action="Index">
                            <div class="input-group input-group-sm" style="width: 300px;">
                                <input type="text" class="form-control" placeholder="Buscar médico" name="filtro" value="@ViewBag.Filtro">

                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </form>

                        <a href="/medico/adicionar" class="btn btn-outline-primary btn-sm">Adicionar Medico</a>

                    </div>

                 </div>
                 <div class="card-body table-responsive p-0">
                     <table class="table table-head-fixed text-nowrap">
                         <thead>
                             <tr>
                                 <th style="width:200px">CRM</th>
                                <th >Nome</th>
                                <th style="width:40px"></th>
                             </tr>
                         </thead>
                         <tbody>
                            @foreach(var medico in Model)
                            {
                                <tr>
                                    <td>@medico.CRM</td>
                                    <td> @medico.Nome</td>
                                    <td>
                                        <a href="/medico/editar/@medico.Id" class="btn btn-secondary btn-sm mr-1" title="Editar Medico">
                                            <span class="fas fa-edit"></span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                     </table>
                 </div>
                 <div class="card-footer clearfix">
                     <ul class="pagination pagination-sm m-0 float-right">
                        @if(ViewBag.TotalPaginas > 0)
                        {
                            @if (ViewBag.NumeroPagina > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", "Medico", new { Filtro = @ViewBag.Filtro, Pagina = @ViewBag.NumeroPagina - 1 })">
                                        &laquo;
                                    </a>
                                </li>
                            }
                            <li class="page-item page-link">Pagina @ViewBag.NumeroPagina de @ViewBag.TotalPaginas</li>
                            @if (ViewBag.NumeroPagina < @ViewBag.TotalPaginas)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", "Medico", new { Filtro = @ViewBag.Filtro, Pagina = @ViewBag.NumeroPagina + 1 })">
                                        &raquo;
                                    </a>
                                </li>
                            }
                        }
                     </ul>

                 </div>
               
             </div>
         </div>

    </div>

</div>